<Page x:Class="SelSovetApp.Pages.AuthCitizenPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SelSovetApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация как житель">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Style="{StaticResource TBlockLabel}" Text="СНИЛС:"/>
                <TextBox x:Name="TBoxSnils"/>
            </StackPanel>
            <Button Content="Войти" x:Name="BtnLogIn" Click="BtnLogIn_Click"/>
        </StackPanel>

    </Grid>
</Page>
