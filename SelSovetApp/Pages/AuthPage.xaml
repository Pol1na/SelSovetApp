<Page x:Class="SelSovetApp.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SelSovetApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация" Loaded="Page_Loaded">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock  Text="Логин:" Style="{StaticResource TBlockLabel}"/>
                <TextBox x:Name="TBoxLogin" MaxLength="50" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="Пароль:" Style="{StaticResource TBlockLabel}"/>
                <PasswordBox x:Name="PBoxPassword" MaxLength="50"/>
            </StackPanel>
            <Button Name="BtnLogin" Content="Авторизация" Click="BtnLogin_Click"/>
            <Button Content="Гражданин?" Click="BtnForCitizens_Click" Name="BtnForCitizens"></Button>
        </StackPanel>

    </Grid>
</Page>
