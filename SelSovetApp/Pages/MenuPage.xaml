<Page x:Class="SelSovetApp.Pages.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SelSovetApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Меню">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Style="{StaticResource TBlockLabel}" Margin="5" FontSize="24" x:Name="TBlockHello" HorizontalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Обращения" Width="170" Height="50" x:Name="BtnAppeals" Click="BtnAppeals_Click"/>
                <Button Content="Новости" Width="170" x:Name="BtnNews" Click="BtnNews_Click"/>
                <Button Content="Жители" Visibility="Collapsed" Width="170" x:Name="BtnCitizens" Click="BtnCitizens_Click"/>
            </StackPanel>
            <Button Content="Сотрудники" Visibility="Collapsed" Width="200" Height="50" x:Name="BtnWorkers" Click="BtnWorkers_Click"/>
        </StackPanel>

    </Grid>
</Page>
